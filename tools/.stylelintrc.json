{
  "extends": ["stylelint-config-standard", "stylelint-config-tailwindcss"],
  "customSyntax": "postcss-syntax",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "no-invalid-position-declaration": null,
    "declaration-property-value-no-unknown": null,
    "value-keyword-case": null
  }
}
