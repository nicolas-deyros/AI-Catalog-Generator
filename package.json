{
  "name": "ai-catalog-creator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:text && npm run lint:spell",
    "lint:js": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:css": "stylelint \"**/*.{ts,tsx}\"",
    "lint:text": "textlint \"**/*.{md,txt}\"",
    "lint:spell": "cspell \"**/*.{ts,tsx,js,jsx,html,css,json,md}\"",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix && npm run lint:text -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint && npm run type-check && npm run test:unit",
    "pre-commit": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "cspell --no-progress",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,sass}": [
      "stylelint --fix"
    ],
    "*.{md,txt}": [
      "textlint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx}": [
      "npm run test:unit -- --run --reporter=verbose --passWithNoTests"
    ]
  },
  "dependencies": {
    "@google/genai": "^1.15.0",
    "@tailwindcss/vite": "^4.1.12",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@cspell/eslint-plugin": "^9.2.0",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "@vitest/ui": "^3.2.4",
    "cspell": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "msw": "^2.10.5",
    "postcss-jsx": "^0.36.4",
    "postcss-syntax": "^0.36.2",
    "prettier": "^3.6.2",
    "react-error-boundary": "^6.0.0",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "textlint": "^15.2.2",
    "textlint-rule-alex": "^5.0.0",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-spellcheck-tech-word": "^5.0.0",
    "textlint-rule-terminology": "^5.2.15",
    "textlint-rule-write-good": "^2.0.0",
    "typescript": "~5.8.2",
    "vite": "npm:rolldown-vite@latest",
    "vitest": "^3.2.4"
  }
}
